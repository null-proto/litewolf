				<h1 class="page-title">Dashboard</h1>
				<p class="page-subtitle">Welcome back, {{ user.name }}! Here's what's happening.</p>
			</div>

			<!-- Stats Grid -->
			<div class="stats-grid">
				<div class="stat-card">
					<div class="stat-header">
						<!-- <span class="stat-icon">üí¨</span> -->
						<img src="/static/icons/t-chats.svg" class="icon-sm sidebar-item-icon" alt="bell">
					</div>
					<div class="stat-value">{{ stats.total_comments }}</div>
					<div class="stat-label">Total Comments</div>
				</div>

				<div class="stat-card">
					<div class="stat-header">
						<!-- <span class="stat-icon">‚úÖ</span> -->
						<img src="/static/icons/d-chats.svg" class="icon-sm sidebar-item-icon" alt="bell">
					</div>
					<div class="stat-value">{{ stats.replies_sent }}</div>
					<div class="stat-label">Replies Sent</div>
				</div>

				<div class="stat-card">
					<div class="stat-header">
						<!-- <span class="stat-icon">üé•</span> -->
						<img src="/static/icons/video.svg" class="icon-sm sidebar-item-icon" alt="bell">
					</div>
					<div class="stat-value">{{ stats.videos_monitored }}</div>
					<div class="stat-label">Videos Monitored</div>
				</div>

				<div class="stat-card">
					<div class="stat-header">
						<img src="/static/icons/math.svg" class="icon-sm sidebar-item-icon" alt="bell">
					</div>
					<div class="stat-value">{{ stats.response_rate }}%</div>
					<div class="stat-label">Response Rate</div>
				</div>
			</div>

			<!-- Content Grid -->
			<div class="content-grid">
				<div class="content-card">
					<div class="content-card-header">
						<h2 class="content-card-title">Monitored Videos</h2>
						<button class="content-card-action">View All ‚Üí</button>
					</div>
					<div class="content-card-body" style="padding: 0;">
						{% for video in monitored_videos %}
						<div class="video-item">
							<div class="video-info">
								<div class="video-title">{{ video.title }}</div>
								<div class="video-meta">{{ video.comments }} comments</div>
							</div>
							<span class="video-status {{ video.status }}">
								{{ video.status }}
							</span>
						</div>
						{% endfor %}
					</div>
				</div>

				<div class="content-card">
					<div class="content-card-header">
						<h2 class="content-card-title">Recent Activity</h2>
						<button class="content-card-action">Clear</button>
					</div>
					<div class="content-card-body" style="padding: 0;">
						{% for activity in recent_activity %}
						<div class="activity-item">
							<div class="activity-title">{{ activity.video }}</div>
							<div class="activity-meta">
								{{ activity.comments }} new comments ‚Ä¢ {{ activity.time }}
							</div>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>

			<div style="text-align: center;">
				<button class="btn btn-primary">‚ûï Add New Video</button>
